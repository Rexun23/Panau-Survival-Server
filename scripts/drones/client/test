drone going down sound
local sound = ClientSound.Create(AssetLocation.Game, {
			bank_id = 6,
			sound_id = 8,
			position = LocalPlayer:GetPosition(),
			angle = Angle()
})

sound:SetParameter(0,0.75)
sound:SetParameter(1,-180)


